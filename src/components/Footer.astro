---
import { capitalize } from "lodash";
import Social from "./Social.astro";

const platform = "github";
const username = "devteni";

const socials = [{platform: "twitter", username: "devteni"}];
---

<footer>
  <p>Learn more about my projects on <a href={`https://www.${platform}.com/${username}`}>{capitalize(platform)}</a>!</p>
  <p>
    Socials: 
    
    { socials.map((el, i) => <Social platform={el.platform} username={el.username} /> )}
  </p>
</footer>