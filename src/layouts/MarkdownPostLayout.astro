---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---
<Layout pageTitle={frontmatter.title}>
<h1>{frontmatter.title}</h1>
<p class="pub_date">Published on {frontmatter.pubDate.slice(0,10)}</p>
<p class="post_desc">{frontmatter.description}</p>
<p class="post_author">Written by {frontmatter.author}</p>
<img src={frontmatter.image.url} alt={frontmatter.image.alt} class="post_image"/>

<div class="tags">
    {frontmatter.tags.map((tag) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
</div>

<slot />

</Layout>

<style>
    .italic {
        font-style: italic;
    }

    .post_image {
        background-color: black;
        width: 100%;
    }

    .post_author {
        font-style: italic;
        font-size: .7rem;
        float: right;
        line-height: .2rem;
    }

    .pub_date {
        font-size: .9rem;
        font-style: italic;
    }

    .post_desc {
        color: #4d4b4b;
        font-size: .8rem;
        border: 1px solid black;
        padding: 1rem 1rem;
    }
    
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex; 
      flex-wrap: wrap; 
      margin: 0 auto;  
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
</style>